today_row = df.loc[ df['ê¸‰ì‹ì¼ì']== '2025-09-05']
st.write(today_row) #ì˜¤ëŠ˜ ë‚ ì§œì— í•´ë‹¹í•˜ëŠ” í–‰ ì¶œë ¥

#metric í™œìš©í•˜ê¸°
st.write("metricìœ¼ë¡œ í†µê³„ ì •ë³´ë¥¼ ì „ê´‘íŒ í˜•íƒœë¡œ ì‹œê°í™”í•  ìˆ˜ ìˆì–´ìš”.")
st.title(today_row['ìš”ë¦¬ëª…'].item())
